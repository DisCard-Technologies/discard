{
  "name": "discard",
  "version": "1.0.0",
  "description": "Privacy-first crypto-backed disposable virtual cards",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:log": "npm test 2>&1 | tee ./logs/test-output.log",
    "test:verbose": "turbo run test --verbose 2>&1 | tee test-output-verbose.log",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "turbo": "^2.5.5",
    "typescript": "^5.3.3",
    "eslint": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "prettier": "^3.2.5",
    "jest": "^30.0.5",
    "@types/jest": "^30.0.0",
    "ts-jest": "^29.1.2",
    "supertest": "^7.1.4",
    "@types/supertest": "^6.0.2",
    "husky": "^9.0.11",
    "lint-staged": "^16.1.5"
  },
  "packageManager": "npm@11.5.2"
}
