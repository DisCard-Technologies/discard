{
  "buildCommand": "npm run build --workspace=@discard/web",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": "apps/web/.next",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet -- apps/web packages/shared",
  "git": {
    "deploymentEnabled": {
      "main": true,
      "master": true
    }
  },
  "github": {
    "enabled": true,
    "autoAlias": true
  },
  "projects": {
    "web": {
      "root": "apps/web"
    }
  },
  "regions": ["iad1"],
  "functions": {
    "apps/web/src/app/api/**/*": {
      "maxDuration": 10
    }
  }
}