# DisCard Compliance Enclave - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Range API Configuration (REQUIRED for production)
# =============================================================================
# Get your API key from https://range.org
RANGE_API_KEY=your-range-api-key-here
RANGE_API_BASE_URL=https://api.range.org

# =============================================================================
# Phala TEE Configuration
# =============================================================================
# Set to true when deploying to Phala Cloud
PHALA_ATTESTATION_ENABLED=false

# For Phala Cloud deployment
PHALA_API_KEY=your-phala-api-key-here

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info

# Port configuration (defaults shown)
HTTP_PORT=8093
ATTESTATION_PORT=8094
HEALTH_PORT=8095
