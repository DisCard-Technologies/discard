{
  "cli": {
    "version": ">= 5.0.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true, // Ensure this is false for a standalone build
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "android": {
        "buildType": "app-bundle"
      }
    },
    "development-simulator": {
      "developmentClient": true, 
      "distribution": "internal",
      "ios": {
        "simulator": true // Set to false if you want to install on a physical device
      },
      "environment": "development"
    }
  },
  "submit": {
    "production": {}
  }
}
